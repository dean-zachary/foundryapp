<div class="container">
  <form class= "form-signin">
    <h2 class ="form-signin-heading">Sign up</h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>

      <div class="field">
        <%= f.label :email, class: "sr-only" %><br />
        <%= f.email_field :email, :placeholder => "Email Address", autofocus: true, class: "form-control" %>
      </div>

      <div class="field">
        <%= f.label :password, class: "sr-only" %>
        <%= f.password_field :password, :placeholder => "Password", autocomplete: "off", class: "form-control" %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
       
      </div>

      <div class="field">
        <%= f.label :password_confirmation, class: "sr-only" %><br />
        <%= f.password_field :password_confirmation, :placeholder => "Confirm Password", autocomplete: "off", class: "form-control" %>
      </div>

      <div class="actions">
        <%= f.submit "Sign up", class: "btn btn-large btn-primary btn-block" %>
      </div>
      <% end %>
    </form>


<%= render "devise/shared/links" %>
</div>