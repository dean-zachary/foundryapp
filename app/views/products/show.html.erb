<p id="notice"><%= notice %></p>
<div class="container">

  <p>
    <strong class="sr-only">Name:</strong>
    <% cache @product do %>
    <%= @product.name %>
    <% end %>
  </p>

  <p class="thumbnail">
    <strong class="sr-only" >Image url:</strong>
    <%= image_tag(@product.image_url, width: "500", class: "img-zoom", data_zoom_image: @product.image_url) %>
  </p>

  <p>
    <strong class="sr-only">Description:</strong>
    <span class="glyphicon glyphicon-hand-right" id="descriptionhand"></span>
    <% cache @product do %>
    <%= @product.description %>
    <% end %>
  </p>



  <p>
	  <strong>Color:</strong>
	  <%= @product.color %>
  </p>
  <p>
	  <strong>Price:</strong>
	  <%= @product.price %>
  </p>
  
  <p>Average Rating: <div class="rated" data-score="<%= @product.average_rating %>"></div> </p>
  
  <%= form_tag "/payments/create" do %>
    <%= hidden_field_tag(:product_id, @product.id) %>
    <%= render partial: "shared/stripe_checkout_button" %>
  
  <% end %>  

  </div>
<div class="container">


  <%= link_to 'Edit', edit_product_path(@product) %> |
  <%= link_to 'Back', products_path %>

  <%= render 'new_comment' %>
  <%= render 'comments' %>
    
    <div class="container">
      <%= will_paginate @comments, container: false %>
    </div>
</div>